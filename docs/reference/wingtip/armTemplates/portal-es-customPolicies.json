{
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {}
        ],
        "steps": [
            {
                "name": "lzSettings",
                "label": "Enterprise-Scale company prefix",
                "mngtLabel": {
                    "preValidation": "Provide the management group to deploy the custom policies to. In the reference architecture this is company prefix.",
                    "postValidation": "Done"
                },
                "bladeTitle": "Managment Group",
                "elements": [
                    {
                        "name": "infoBox1",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "Use this to deploy or update the custom policies to the selected management group."
                        }
                    },
                    {
                        "name": "mngtGroupApi",
                        "type": "Microsoft.Solutions.ArmApiControl",
                        "request": {
                            "method": "GET",
                            "path": "providers/Microsoft.Management/managementGroups?api-version=2020-02-01"
                        }
                    },
                    {
                        "name": "textBlock0",
                        "type": "Microsoft.Common.TextBlock",
                        "visible": true,
                        "options": {
                            "text": "Enterprise-Scale is based on a management group hierarchy under the Tenant Root Group. Best practice is to deploy any custom policies to be used on the top level Management Group under the Tenant Root Group.",
                            "link": {
                                "label": "Learn more",
                                "uri": "https://docs.microsoft.com/azure/cloud-adoption-framework/ready/enterprise-scale/management-group-and-mngtscription-organization"
                            }
                        }
                    },
                    {
                        "name": "esMgmtGroup",
                        "type": "Microsoft.Common.DropDown",
                        "label": "Management Group",
                        "toolTip": "Select the management group.",
                        "multiselect": false,
                        "selectAll": true,
                        "filter": true,
                        "filterPlaceholder": "Filter items ...",
                        "multiLine": true,
                        "constraints": {
                            "allowedValues": "[map(steps('lzSettings').mngtGroupApi.value, (mngt) => parse(concat('{\"label\":\"', mngt.properties.displayName, '\",\"description\":\"', mngt.name, '\",\"value\":\"', toLower(mngt.name), '\"}')) )]",
                            "required": true
                        }
                    }
                ]
            }
        ],
        "outputs": {

            "enterpriseScaleCompanyPrefix": "[steps('lzSettings').esMgmtGroup]"

        }
    }
}