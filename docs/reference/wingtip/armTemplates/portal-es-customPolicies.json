{
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {}
        ],
        "steps": [
            {
                "name": "lzSettings",
                "label": "Enterprise-Scale company prefix",
                "subLabel": {
                    "preValidation": "Provide the management group to deploy the custom policies to. In the reference architecture this is company prefix.",
                    "postValidation": "Done"
                },
                "bladeTitle": "Managment Group",
                "elements": [
                    {
                        "name": "infoBox1",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "Use this to deploy or update the custom policies to the selected management group. There are 2 policy set for Azure Global and for Azure China."
                        }
                    },
                    {
                        "name": "textBlock0",
                        "type": "Microsoft.Common.TextBlock",
                        "visible": true,
                        "options": {
                            "text": "Enterprise-Scale is based on a management group hierarchy under the Tenant Root Group with the selected Management Group that contains the custom policies.",
                            "link": {
                                "label": "Learn more",
                                "uri": "https://docs.microsoft.com/azure/cloud-adoption-framework/ready/enterprise-scale/management-group-and-subscription-organization"
                            }
                        }
                    },
                    {
                        "name": "esMgmtGroup",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Management Group prefix",
                        "toolTip": "Provide a prefix for management group structure, 1-5 characters.",
                        "defaultValue": "",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z-]{1,5}$",
                            "validationMessage": "The prefix must be 1-5 characters."
                        }
                    }
                ]
            }
        ],
        "outputs": {

            "enterpriseScaleCompanyPrefix": "[steps('lzSettings').esMgmtGroup]",

        }
    }
}